<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Write_A_Thon.Styles">
    <Style TargetType="TextBlock" x:Key="RegularTextBlock">
        <Setter Property="Foreground"
                    Value="White"/>
    </Style>
    <Style x:Key="TitleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource RegularTextBlock}">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <Style TargetType="FlipViewItem">
        <Setter Property="Padding" Value="12,0"/>
    </Style>

    <Style x:Key="directionButtonStyle" TargetType="Button" BasedOn="{StaticResource TextBlockButtonStyle}">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="PaddedRelativePanel" TargetType="RelativePanel">
        <Setter Property="Padding" Value="12,0"/>
    </Style>
</ResourceDictionary>
